<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="bi.konstrictor.urudandaza">

    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:requestLegacyExternalStorage="true"
        android:theme="@style/AppTheme"
        tools:targetApi="q">
        <activity android:name=".VenteActivity"
            android:label="@string/kugurisha"
            android:parentActivityName=".MainDashBoardActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".LiquideActivity"
            android:label="@string/ayasohotse"
            android:parentActivityName=".MainDashBoardActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ClientActivity"
            android:label="@string/abakiriya"
            android:parentActivityName=".MainDashBoardActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ClotureActivity"
            android:label="@string/icegeranyo"
            android:parentActivityName=".MainDashBoardActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".DetailHistActivity"
            android:label="@string/icegeranyo"
            android:parentActivityName=".ClotureActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".IvyinjiraActivity"
            android:label="@string/title_activity_ivyinjira"
            android:parentActivityName=".MainDashBoardActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".StockActivity"
            android:label="@string/title_activity_ibidandazwa"
            android:parentActivityName=".MainDashBoardActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".MainDashBoardActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="file"
                    android:mimeType="*/*"
                    android:label="@string/app_name"
                    android:host="*" />
                <data android:pathPattern=".*\\.rdz" />
                <data android:pathPattern=".*\\..*\\.rdz" />
                <data android:pathPattern=".*\\..*\\..*\\.rdz" />
                <data android:pathPattern=".*\\..*\\..*\\..*\\.rdz" />
            </intent-filter>
        </activity>
    </application>

</manifest>