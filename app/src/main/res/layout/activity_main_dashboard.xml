                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Ayasohotse"
                                    android:textAlignment="center"
                                    android:textStyle="bold"
                                    android:textSize="7pt" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="ayatwawe n'ibindi"
                                    android:textAlignment="center"
                                    android:textSize="6pt"
                                    android:lines="2"
                                    android:ellipsize="end"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="110dp"
                        android:layout_height="140dp"
                        android:layout_margin="5dp"
                        android:onClick="startClient"
                        app:cardElevation="1dp">
                        <FrameLayout
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="#7c4dff" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:background="@drawable/cercle_violet"
                                android:padding="15dp"
                                android:src="@drawable/ic_people" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Abakiriya"
                                    android:textAlignment="center"
                                    android:textStyle="bold"
                                    android:textSize="7pt" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="abanshorera n'amadeni"
                                    android:textAlignment="center"
                                    android:textSize="6pt"
                                    android:lines="2"
                                    android:ellipsize="end"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="110dp"
                        android:layout_height="140dp"
                        android:layout_margin="5dp"
                        app:cardElevation="1dp">

                        <FrameLayout
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="#117380" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:background="@drawable/cercle_bleu"
                                android:padding="15dp"
                                android:src="@drawable/ic_information" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Ubufasha"
                                    android:textAlignment="center"
                                    android:textStyle="bold"
                                    android:textSize="7pt" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="gutegera uko bikora"
                                    android:textAlignment="center"
                                    android:textSize="6pt"
                                    android:lines="2"
                                    android:ellipsize="end"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="110dp"
                        android:layout_height="140dp"
                        android:layout_margin="5dp"
                        app:cardElevation="1dp">

                        <FrameLayout
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="#ff4081" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:background="@drawable/cercle_rouge"
                                android:padding="15dp"
                                android:src="@drawable/ic_close" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Kwugara"
                                    android:textAlignment="center"
                                    android:textStyle="bold"
                                    android:textSize="7pt" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="kuzimya application"
                                    android:textAlignment="center"
                                    android:textSize="6pt"
                                    android:lines="2"
                                    android:ellipsize="end"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </com.google.android.flexbox.FlexboxLayout>

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</RelativeLayout>