<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainDashBoardActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textSize="12pt" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="Jonathan NKURUNZIZA"
                    android:textSize="11pt" />

                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:paddingBottom="20dp"
                    app:alignContent="flex_end"
                    app:alignItems="flex_start"
                    app:flexDirection="row"
                    app:flexWrap="wrap"
                    app:justifyContent="center">

                    <androidx.cardview.widget.CardView
                        android:layout_width="110dp"
                        android:layout_height="140dp"
                        android:layout_margin="5dp"
                        android:onClick="startStock"
                        app:cardElevation="1dp">

                        <FrameLayout
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="#00bfa5" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:background="@drawable/cercle_vert"
                                android:padding="15dp"
                                android:src="@drawable/ic_produit" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Ibidandazwa"
                                    android:textAlignment="center"
                                    android:textStyle="bold"
                                    android:textSize="7pt" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="ibihari no kurangura"
                                    android:textAlignment="center"
                                    android:textSize="6pt"
                                    android:lines="2"
                                    android:ellipsize="end"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="110dp"
                        android:layout_height="140dp"
                        android:layout_margin="5dp"
                        android:onClick="startVente"
                        app:cardElevation="1dp">

                        <FrameLayout
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="#ff4081" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:background="@drawable/cercle_rouge"
                                android:padding="15dp"
                                android:src="@drawable/ic_balance" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Kugurisha"
                                    android:textAlignment="center"
                                    android:textStyle="bold"
                                    android:textSize="7pt" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="gusohora no kudandaza"
                                    android:textAlignment="center"
                                    android:textSize="6pt"
                                    android:lines="2"
                                    android:ellipsize="end"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="110dp"
                        android:layout_height="140dp"
                        android:layout_margin="5dp"
                        app:cardElevation="1dp"
                        android:onClick="startHistory">

                        <FrameLayout
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="#779" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:background="@drawable/cercle_slategrey"
                                android:padding="15dp"
                                android:src="@drawable/ic_list" />

                            <LinearLayout
