<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120sp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginStart="5dp"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:focusable="true">
        <LinearLayout
            android:id="@+id/vente_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/lbl_card_vente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="ikidandazwa"
                android:lines="1"
                android:textStyle="bold"
                android:ellipsize="end"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/lbl_card_vente_prix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#339"
                android:layout_gravity="center"
                android:text="1000Fbu"
                android:textSize="13sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_vente_qtt_moins"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_remove"/>
            <EditText
                android:id="@+id/field_vente_qtt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="8pt"
                android:layout_marginTop="-10dp"
                android:text="0"
                android:inputType="numberDecimal"
                android:textAlignment="center"/>
            <Button
                android:id="@+id/btn_vente_qtt_plus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_add_p"/>
        </LinearLayout>
        </LinearLayout>
</androidx.cardview.widget.CardView>
