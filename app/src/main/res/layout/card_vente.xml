<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120sp"
    android:layout_margin="5dp"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:focusable="true">
        <LinearLayout
            android:id="@+id/vente_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">
            <TextView
                android:id="@+id/lbl_card_vente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="ikidandazwa"
                android:lines="1"
                android:textStyle="bold"
                android:ellipsize="end"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="18sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_vente_qtt_moins"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="-"
                android:padding="0dp"
                android:textSize="12pt"
                android:textColor="@drawable/material_button_text_color"
                android:background="@drawable/material_button" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/lbl_card_vente_prix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:textColor="#339"
                    android:layout_gravity="center"
                    android:text="300000Fbu"
                    android:textSize="13sp"/>
                <EditText
                    android:id="@+id/field_vente_qtt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-10dp"
                    android:textSize="8pt"
                    android:text="0"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"/>
            </LinearLayout>
            <Button
                android:id="@+id/btn_vente_qtt_plus"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="+"
                android:padding="0dp"
                android:textSize="12pt"
                android:textColor="@drawable/material_button_text_color"
                android:background="@drawable/material_button"/>
        </LinearLayout>
        </LinearLayout>
</androidx.cardview.widget.CardView>
